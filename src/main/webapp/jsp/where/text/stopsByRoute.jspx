<html xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:s="/struts-tags">
<jsp:directive.page contentType="text/html" />
<s:set name="stopCount" value="tree.stops.size" />
<head>
<title>One Bus Away - Search For Stops By Route</title>
</head>
<body>

<div class="stopsByRouteSelectionDescription">Current Search: Route: <s:property value="route" /> <s:iterator
    value="tree.selected">
&gt; <s:property value="getNameAsString(top)" />
</s:iterator></div>

<s:if test="#stopCount &gt; 7">
    <div class="stopsByRouteSelectionAction"><s:if test="tree.selected.empty">Select the route's final destination:</s:if><s:else>Refine your search:</s:else></div>

    <ul>
        <s:iterator value="tree.names" status="status">

            <s:if test="tree.hasStop(top)">
                <s:set name="stop" value="tree.getStop(top)" />

                <s:url id="url" action="stop" includeParams="none">
                    <s:param name="id" value="#stop.id" />
                </s:url>
                <li>
                <s:a cssClass="button stop" href="%{url}">
                    <s:property value="#stop.name" />
                </s:a>
                </li>

            </s:if>
            <s:else>

                <s:url id="url" action="stopsByRoute">
                    <s:param name="route" value="route" />
                    <s:param name="selection" value="extendSelection(#status.index)" />
                </s:url>

                <li><s:a cssClass="button" href="%{url}">
                    <s:property value="getNameAsString(top)" />
                </s:a></li>
            </s:else>
        </s:iterator>
    </ul>
</s:if>

<s:if test="! tree.selected.empty">
    <div class="stopsByRouteSelectionAction"><s:if test="#stopCount &gt; 7">Or select a stop:</s:if><s:else>Select a stop:</s:else></div>
    <ul>
        <s:iterator value="tree.stops">
            <s:url id="url" action="stop" includeParams="none">
                <s:param name="id" value="id" />
            </s:url>
            <li><s:a cssClass="button stop" href="%{url}">
                <s:property value="name" />
            </s:a></li>
        </s:iterator>
    </ul>
</s:if>

</body>

</html>
