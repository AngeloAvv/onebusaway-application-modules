<html xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:s="/struts-tags">
<jsp:directive.page contentType="text/html" />
<s:set name="stop" value="result.stop" />
<s:set name="now" value="getNow()" />
<head>
<title><s:property value="getCombinedIntersectionName(#stop)" /> - <s:property value="#stop.direction" />
bound - Stop # <s:property value="#stop.id" /></title>
</head>
<body>

<s:iterator value="result.predictedArrivals">
    <s:set name="arrivalsStatusLabelStyle" value="getArrivalStatusLabelStyle(top,#now)" />
    <div>
        <s:property value="route" /><s:if test="express">E</s:if><jsp:text> </jsp:text><s:property value="destination" />: <s:property value="getMinutesLabel(top,#now)" />
    </div>            
</s:iterator>

<s:if test="result.predictedArrivals.empty">
    <div>No scheduled arrivals in the next 30 minutes.</div>
</s:if>

</body>
</html>