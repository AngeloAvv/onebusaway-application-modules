<ehcache>


    <!--  -->
    <diskStore path="/tmp/onebusaway.org/cache/spring" />

    <!--  -->
    <cache name="org.onebusaway.where.impl.StopTimePredictionServiceImpl.timepointsCache" maxElementsInMemory="200"
        eternal="true" overflowToDisk="true" diskPersistent="true" />

    <!--  -->
    <cache name="org.onebusaway.where.impl.StopTimePredictionServiceImpl.predictionsCache" maxElementsInMemory="200"
        eternal="true" timeToIdleSeconds="480" timeToLiveSeconds="480" overflowToDisk="true" diskPersistent="false" />

    <!--  -->
    <cache name="org.onebusaway.where.impl.CalendarServiceImpl.cache" maxElementsInMemory="0" eternal="true"
        overflowToDisk="true" diskPersistent="true" />

    <!--  Default Cache -->
    <!--  Lots of caches use this default so don't change it unless you know what you are doing -->
    <defaultCache maxElementsInMemory="50" eternal="true" overflowToDisk="true" diskPersistent="true" />
</ehcache>