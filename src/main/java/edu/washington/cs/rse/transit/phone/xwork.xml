<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 2.0//EN" "http://www.opensymphony.com/xwork/xwork-2.0.dtd">
<xwork>

	<include file="org/traditionalcake/probablecalls/xwork.xml" />

	<package name="bus" extends="probable-calls">

		<action name="/welcome" class="edu.washington.cs.rse.transit.phone.actions.DefaultAction">
			<result>/welcome</result>
		</action>

		<action name="/index" class="edu.washington.cs.rse.transit.phone.actions.DefaultAction">
			<result>/index</result>
		</action>
		
		<action name="/find_your_stop" class="edu.washington.cs.rse.transit.phone.actions.DefaultAction">
			<result>/find_your_stop</result>
		</action>

		<action name="/most_recent" class="edu.washington.cs.rse.transit.phone.actions.schedule.MostRecentAction">
			<result>/stop/byId</result>
			<result name="input">/no_most_recent</result>
		</action>

		<!--  Generic Help Message  -->
		<action name="/help" class="edu.washington.cs.rse.transit.phone.actions.HelpAction">
			<result>/help</result>
		</action>

		<!-- Stop Actions -->

		<action name="/stop/index" class="edu.washington.cs.rse.transit.phone.actions.DefaultAction">
			<result>/stop/index</result>
		</action>

		<action name="/stop/byId"
			class="edu.washington.cs.rse.transit.phone.actions.schedule.PredictedScheduleByStopAction">
			<result>/stop/byId</result>
			<result name="input">/stop/invalidStopNumber</result>
		</action>

		<action name="/stop/predictionsByRoute"
			class="edu.washington.cs.rse.transit.phone.actions.PredictedScheduleByRouteAction">
			<result>/stop/byId</result>
		</action>

		<action name="/stop/bookmark" class="edu.washington.cs.rse.transit.phone.actions.BookmarkStopAction">
			<exception-mapping
				exception="edu.washington.cs.rse.transit.phone.services.LocationAlreadyBookmarkedException" result="already_added" />
			<exception-mapping exception="edu.washington.cs.rse.transit.phone.services.BookmarksAtCapacityException"
				result="at_capacity" />
			<result name="already_added">/bookmarks/alreadyAdded</result>
			<result name="at_capacity">/bookmarks/atCapacity</result>
			<result>/bookmarks/added</result>
		</action>

		<!-- Search Actions  -->

		<action name="/search/index" class="edu.washington.cs.rse.transit.phone.actions.DefaultAction">
			<result>/search/index</result>
		</action>

		<action name="/search/tree" class="edu.washington.cs.rse.transit.phone.actions.search.StopSelectionAction">
			<result name="stopFound">/search/stopFound</result>
			<result>/search/tree</result>
		</action>

		<!-- Bookmark Actions -->

		<action name="/bookmarks/index" class="edu.washington.cs.rse.transit.phone.actions.GetBookmarksAction">
			<result>/bookmarks/index</result>
		</action>

		<action name="/bookmarks/manage" class="edu.washington.cs.rse.transit.phone.actions.GetBookmarksAction">
			<result>/bookmarks/manage</result>
		</action>

		<action name="/bookmarks/deleteByIndex"
			class="edu.washington.cs.rse.transit.phone.actions.DeleteBookmarkAction">
			<result>/bookmarks/deleted</result>
		</action>

	</package>
</xwork>

