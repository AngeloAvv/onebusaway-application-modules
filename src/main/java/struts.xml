<!DOCTYPE struts PUBLIC 
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <!-- -->
    <package name="onebusaway" extends="struts-default" abstract="true">

        <interceptors>
            <interceptor-stack name="onebusaway-stack">
                <interceptor-ref name="exception">
                    <param name="logEnabled">true</param>
                    <param name="logLevel">ERROR</param>
                </interceptor-ref>
                <interceptor-ref name="alias" />
                <interceptor-ref name="servletConfig" />
                <interceptor-ref name="prepare" />
                <interceptor-ref name="i18n" />
                <interceptor-ref name="chain" />
                <interceptor-ref name="debugging" />
                <interceptor-ref name="profiling" />
                <interceptor-ref name="scopedModelDriven" />
                <interceptor-ref name="modelDriven" />
                <interceptor-ref name="fileUpload" />
                <interceptor-ref name="checkbox" />
                <interceptor-ref name="staticParams" />
                <interceptor-ref name="actionMappingParams" />
                <interceptor-ref name="params">
                    <param name="excludeParams">dojo\..*</param>
                </interceptor-ref>
                <interceptor-ref name="conversionError" />
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="onebusaway-stack" />

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="Exception" />
        </global-exception-mappings>
    </package>

    <!--  -->
    <package name="standard" namespace="/where/standard" extends="onebusaway">
        <global-results>
            <result name="Exception">/jsp/where/standard/exception.jspx</result>
        </global-results>
        <action name="stop" class="org.onebusaway.where.web.actions.StopByNumberAction">
            <result>/jsp/where/standard/stop.jspx</result>
        </action>
        <action name="schedule" class="org.onebusaway.where.web.actions.ScheduleByStopAction">
            <result>/jsp/where/standard/schedule.jspx</result>
        </action>
    </package>

    <!-- -->
    <package name="iphone" namespace="/where/iphone" extends="onebusaway">
        <global-results>
            <result name="Exception">/jsp/where/iphone/exception.jspx</result>
        </global-results>
        <action name="index">
            <result>/jsp/where/iphone/index.jspx</result>
        </action>
        <action name="stops">
            <result type="redirect">index.action</result>
        </action>
        <action name="stopIdentification">
            <result>/jsp/where/iphone/stopIdentification.jspx</result>
        </action>
        <action name="searchByStopNumber">
            <result type="redirect">index.action</result>
        </action>
        <action name="stop" class="org.onebusaway.where.web.actions.StopByNumberAction">
            <result>/jsp/where/iphone/stop.jspx</result>
        </action>
        <action name="searchByRouteNumber">
            <result type="redirect">index.action</result>
        </action>
        <action name="stopsByRoute" class="org.onebusaway.where.web.actions.StopsByRouteAction">
            <result>/jsp/where/iphone/stopsByRoute.jspx</result>
            <result name="stop" type="redirect">stop.action?id=${stopId}</result>
        </action>
    </package>

    <!-- -->
    <package name="text" namespace="/where/text" extends="onebusaway">
        <global-results>
            <result name="Exception">/jsp/where/text/exception.jspx</result>
        </global-results>
        <action name="index">
            <result>/jsp/where/text/index.jspx</result>
        </action>
        <action name="stopIdentification">
            <result>/jsp/where/text/stopIdentification.jspx</result>
        </action>
        <action name="stop" class="org.onebusaway.where.web.actions.StopByNumberAction">
            <result>/jsp/where/text/stop.jspx</result>
        </action>
        <action name="stopsByRoute" class="org.onebusaway.where.web.actions.StopsByRouteAction">
            <result>/jsp/where/text/stopsByRoute.jspx</result>
            <result name="stop" type="redirect">stop.action?id=${stopId}</result>
        </action>
    </package>

    <!-- -->
    <package name="sms" namespace="/where/sms" extends="onebusaway">
        <global-results>
            <result name="Exception">/jsp/where/sms/exception.jspx</result>
        </global-results>
        <action name="stop" class="org.onebusaway.where.web.sms.actions.StopByTextmarkAction">
            <result>/jsp/where/sms/stop.jspx</result>
            <result name="input">/jsp/where/sms/input.jspx</result>
        </action>
    </package>
</struts>