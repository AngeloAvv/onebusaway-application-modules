<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 2.0//EN" "http://www.opensymphony.com/xwork/xwork-2.0.dtd">
<xwork>

    <include file="org/traditionalcake/probablecalls/xwork.xml" />

    <package name="bus" extends="probable-calls">

        <interceptors>
            <interceptor name="callerIdLogin" class="org.onebusaway.presentation.impl.users.PhoneNumberLoginInterceptor">
                <param name="phoneNumberParameterName">userId</param>
            </interceptor>
            <interceptor name="currentUser" class="org.onebusaway.presentation.impl.users.CurrentUserInterceptor" />

            <interceptor-stack name="phoneCustomStack">
                <interceptor-ref name="defaultStack" />
                <interceptor-ref name="callerIdLogin" />
                <interceptor-ref name="currentUser" />
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="phoneCustomStack" />

        <action name="/welcome" class="org.onebusaway.phone.actions.DefaultAction">
            <result>/welcome</result>
        </action>

        <action name="/index" class="org.onebusaway.phone.actions.DefaultAction">
            <result>/index</result>
        </action>

        <action name="/find_your_stop" class="org.onebusaway.phone.actions.DefaultAction">
            <result>/find_your_stop</result>
        </action>

        <action name="/most_recent" class="org.onebusaway.phone.actions.schedule.MostRecentStopAction">
            <result type="chain">/stop/arrivalsAndDeparturesForStopId</result>
            <result name="input">/no_most_recent</result>
        </action>

        <!--  Generic Help Message  -->
        <action name="/help" class="org.onebusaway.phone.actions.HelpAction">
            <result>/help</result>
        </action>

        <!-- Stop Actions -->

        <action name="/stop/index" class="org.onebusaway.phone.actions.DefaultAction">
            <result>/stop/index</result>
        </action>

        <action name="/stop/byCode" class="org.onebusaway.phone.actions.schedule.StopForCodeAction">
            <result type="chain">/stop/arrivalsAndDeparturesForStopId</result>
            <result name="input">/stop/invalidStopNumber</result>
            <result name="needDefaultSearchLocation">/stop/needDefaultSearchLocation</result>
        </action>

        <action name="/stop/arrivalsAndDeparturesForStopId" class="org.onebusaway.phone.actions.schedule.ArrivalsAndDeparturesForStopIdAction">
            <result>/stop/arrivalsAndDepartures</result>
        </action>

        <action name="/stop/arrivalsAndDeparturesForRoute" class="org.onebusaway.phone.actions.schedule.ArrivalsAndDeparturesForRouteAction">
            <result>/stop/arrivalsAndDepartures</result>
        </action>

        <action name="/stop/bookmark" class="org.onebusaway.phone.actions.BookmarkStopAction">
            <exception-mapping exception="org.onebusaway.users.services.LocationAlreadyBookmarkedException"
                result="already_added" />
            <exception-mapping exception="org.onebusaway.users.services.BookmarksAtCapacityException"
                result="at_capacity" />
            <result name="already_added">/bookmarks/alreadyAdded</result>
            <result name="at_capacity">/bookmarks/atCapacity</result>
            <result>/bookmarks/added</result>
        </action>

        <!-- Search Actions  -->

        <action name="/search/index" class="org.onebusaway.phone.actions.DefaultAction">
            <result>/search/index</result>
        </action>

        <action name="/search/tree" class="org.onebusaway.phone.actions.search.StopSelectionAction">
            <result name="stopFound">/search/stopFound</result>
            <result>/search/tree</result>
        </action>

        <action name="/search/stop" class="org.onebusaway.phone.actions.search.StopAction">
            <result>/search/stopFound</result>
        </action>

        <!-- Bookmark Actions -->

        <action name="/bookmarks/index" class="org.onebusaway.phone.actions.bookmarks.GetBookmarksAction">
            <result>/bookmarks/index</result>
        </action>

        <action name="/bookmarks/manage" class="org.onebusaway.phone.actions.bookmarks.GetBookmarksAction">
            <result>/bookmarks/manage</result>
        </action>

        <action name="/bookmarks/deleteByIndex" class="org.onebusaway.phone.actions.bookmarks.DeleteBookmarkAction">
            <result>/bookmarks/deleted</result>
        </action>

        <!-- Default Search Location Actions -->

        <action name="/location/askForDefaultSearchLocation" class="org.onebusaway.phone.actions.location.AskForDefaultSearchLocationAction">
            <result>/location/askForDefaultSearchLocation</result>
        </action>

        <action name="/location/setDefaultSearchLocation" class="org.onebusaway.phone.actions.location.SetDefaultSearchLocationAction">
            <result>/location/setDefaultSearchLocation</result>
        </action>
    </package>
</xwork>

